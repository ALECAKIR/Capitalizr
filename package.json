{
  "name": "auto-capitalize-vsc",
  "displayName": "Auto Capitalize",
  "description": "Toggle first letter case of files and folders",
  "version": "1.0.0",
  "publisher": "ALECAKIR",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.toggleFirstLetterCaseContext"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.toggleFirstLetterCaseContext",
        "title": "Toggle First Letter Case"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.toggleFirstLetterCaseContext",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.30",
    "typescript": "^5.4.5"
  }
}